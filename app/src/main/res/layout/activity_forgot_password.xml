<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@drawable/ic_launcher_sign_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ForgotPassword">

    <ImageView
        android:id="@+id/signUp_IMV_appLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:src="@drawable/ic_launcher_applogo" />

    <EditText
        android:id="@+id/forgotpass_LBL_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Email "
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/forgotpass_BTN_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#7FB5FF"
            android:text="Back"
            android:textAllCaps="false"
            android:layout_marginRight="30dp"
            app:cornerRadius="25dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/forgotpass_BTN_Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#7FB5FF"
            android:text="Reset Password"
            app:cornerRadius="25dp"
            android:textAllCaps="false" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/ic_launcher_sign_up_background"></ImageView>

</androidx.appcompat.widget.LinearLayoutCompat>